<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WedDevStackController.Styles" xmlns:System="clr-namespace:System;assembly=mscorlib">

    <System:Double x:Key="ExampleButtonFontSize">40</System:Double>
    <Thickness x:Key="ExampleButtonMargin" Left="10" Top="10" Right="10" Bottom="10" />
    <Thickness x:Key="ExampleButtonPadding" Left="10" Top="10" Right="10" Bottom="10" />
    
    <Style TargetType="Button" x:Key="S_ExampleButton">
        <Setter Property="Background" Value="{StaticResource B_Pink}"/>
        <Setter Property="Foreground" Value="{StaticResource B_Black}"/>
        <Setter Property="FontSize" Value="{StaticResource ExampleButtonFontSize}"/>
        <Setter Property="Margin" Value="{StaticResource ExampleButtonMargin}"/>
        <Setter Property="Padding" Value="{StaticResource ExampleButtonPadding}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

</ResourceDictionary>